#!/bin/bash
i2cset -y 1 0x70 0x20
i2cset -y 1 0x70 0x00 0x0000 w
i2cset -y 1 0x70 0x02 0x0000 w
i2cset -y 1 0x70 0x04 0x0000 w
i2cset -y 1 0x70 0x06 0x0000 w
i2cset -y 1 0x70 0x08 0x0000 w
i2cset -y 1 0x70 0x0a 0x0000 w
i2cset -y 1 0x70 0x0c 0x0000 w
i2cset -y 1 0x70 0x0e 0x0000 w
i2cset -y 1 0x70 0x21
i2cset -y 1 0x70 0xef
i2cset -y 1 0x70 0x81
while read CMD
do
  eval $CMD
done
